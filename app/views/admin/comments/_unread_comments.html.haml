- @unread_comments.each do |conference, events|
  .panel.panel-default
    .panel-heading
      %h4.title.panel-title= conference.short_title
    .panel-body
      - conference.events.each do |event|
        .box
          %h4.title= link_to event.title, admin_conference_event_path(event.conference.short_title, event)
          %hr
          - event.comment_threads.find_since_last_login(current_user).each do |comment|
            %h5.strong Posted by: #{comment.user.name} | Created at: #{comment.created_at}
            %p= comment.body
