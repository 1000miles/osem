- if can? :edit, @user
  .pull-right
    = link_to "Edit", edit_admin_user_path(@user), class: 'btn btn-primary'
%table.table
  - @show_attributes.each do |attr|
    %tr
      %td{style: 'width:20%'}
        %b
          = attr.capitalize.gsub('_', ' ')
      - if attr == 'roles'
        %td
          = show_roles(@user.get_roles)
      - else
        %td= @user.send(attr)
